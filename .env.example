# ClickUp CLI Configuration
# Copy this file to .env and fill in your values

# Required: Your ClickUp API token
# Get this from https://app.clickup.com/settings/apps
CLICKUP_API_TOKEN=your_api_token_here

# Optional: Test API token for running tests
# This token will be used when running tests instead of the regular API token
CLICKUP_API_TOKEN_TEST=your_test_api_token_here

# Optional: Default workspace ID for convenience
# This will be used as the default workspace for commands
CLICKUP_WORKSPACE_ID=your_workspace_id_here

# Optional: Default list ID for task operations
# This will be used as the default list for task commands
CLICKUP_DEFAULT_LIST_ID=your_list_id_here

# Optional: API base URL (defaults to ClickUp v2 API)
# Only change this if you're using a custom API endpoint
CLICKUP_API_BASE_URL=https://api.clickup.com/api/v2

# Optional: Rate limiting configuration
# Maximum requests per minute (default: 100 for free accounts)
CLICKUP_RATE_LIMIT__REQUESTS_PER_MINUTE=100

# Optional: Auto-retry rate-limited requests (default: true)
CLICKUP_RATE_LIMIT__AUTO_RETRY=true

# Optional: Maximum retry attempts (default: 3)
CLICKUP_RATE_LIMIT__MAX_RETRIES=3

# Optional: Buffer time for rate limiting in seconds (default: 5)
CLICKUP_RATE_LIMIT__BUFFER_SECONDS=5

# Optional: Logging level (debug, info, warn, error)
# Set to debug for verbose output
RUST_LOG=info
